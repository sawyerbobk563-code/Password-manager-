    <script>
        // --- PWA CONFIGURATION ---
        const PWA_NAME = "ShieldVault";
        const manifest = {
            "name": PWA_NAME,
            "short_name": "Vault",
            "start_url": ".",
            "display": "standalone",
            "background_color": "#f5f7fa",
            "theme_color": "#4f46e5",
            "icons": [{
                "src": "https://cdn-icons-png.flaticon.com/512/2092/2092663.png",
                "sizes": "512x512",
                "type": "image/png"
            }]
        };
        const stringManifest = JSON.stringify(manifest);
        const blob = new Blob([stringManifest], {type: 'application/json'});
        document.getElementById('manifest-link').setAttribute('href', URL.createObjectURL(blob));

        // --- CLOUDFLARE CONFIGURATION ---
        const WORKER_URL = "https://password-manager-api.sawyerbobk563.workers.dev"; 

        let vaultData = [];
        let encryptionKey = null;
        let currentSalt = null;
        let deferredPrompt = null;
        let idleTimeout = null;
        let isFirstTime = false;
        const INACTIVITY_TIMEOUT = 5 * 60 * 1000; // 5 minutes for testing (use 15*60*1000 for production)

        // --- PWA INSTALL PROMPT ---
        window.addEventListener('beforeinstallprompt', (e) => {
            e.preventDefault();
            deferredPrompt = e;
            
            // Show install button after a delay
            setTimeout(() => {
                if (deferredPrompt) {
                    document.getElementById('pwa-install-prompt').classList.remove('hidden');
                }
            }, 3000);
        });

        function installPWA() {
            if (deferredPrompt) {
                deferredPrompt.prompt();
                deferredPrompt.userChoice.then((choiceResult) => {
                    if (choiceResult.outcome === 'accepted') {
                        console.log('PWA installed successfully');
                        showNotification("ShieldVault installed successfully!", "success");
                    }
                    deferredPrompt = null;
                    document.getElementById('pwa-install-prompt').classList.add('hidden');
                });
            }
        }

        function dismissPWA() {
            document.getElementById('pwa-install-prompt').classList.add('hidden');
        }

        // --- INACTIVITY TIMER ---
        function resetInactivityTimer() {
            clearTimeout(idleTimeout);
            
            if (!document.getElementById('vault-section').classList.contains('hidden-vault')) {
                idleTimeout = setTimeout(() => {
                    document.getElementById('inactivity-modal').classList.remove('hidden');
                }, INACTIVITY_TIMEOUT);
            }
        }

        function extendSession() {
            document.getElementById('inactivity-modal').classList.add('hidden');
            resetInactivityTimer();
            showNotification("Session extended", "info");
        }

        // Add event listeners for user activity
        ['mousemove', 'keydown', 'click', 'scroll', 'touchstart'].forEach(event => {
            document.addEventListener(event, resetInactivityTimer, { passive: true });
        });

        // Initialize inactivity timer on page load
        resetInactivityTimer();

        // --- PASSWORD STRENGTH CHECKER ---
        function checkPasswordStrength(password) {
            let score = 0;
            const checks = [];
            
            if (password.length >= 12) {
                score++;
                checks.push({text: "âœ“ Length (12+ chars)", color: "text-green-500"});
            } else {
                checks.push({text: "âœ— Minimum 12 characters", color: "text-red-500"});
            }
            
            if (/[A-Z]/.test(password)) {
                score++;
                checks.push({text: "âœ“ Uppercase letter", color: "text-green-500"});
            } else {
                checks.push({text: "âœ— Add uppercase letter", color: "text-red-500"});
            }
            
            if (/[a-z]/.test(password)) {
                score++;
                checks.push({text: "âœ“ Lowercase letter", color: "text-green-500"});
            } else {
                checks.push({text: "âœ— Add lowercase letter", color: "text-red-500"});
            }
            
            if (/[0-9]/.test(password)) {
                score++;
                checks.push({text: "âœ“ Number", color: "text-green-500"});
            } else {
                checks.push({text: "âœ— Add a number", color: "text-red-500"});
            }
            
            if (/[^A-Za-z0-9]/.test(password)) {
                score++;
                checks.push({text: "âœ“ Special character", color: "text-green-500"});
            } else {
                checks.push({text: "âœ— Add special character", color: "text-red-500"});
            }
            
            const strengthLevels = [
                {text: "Very Weak", color: "text-red-500", bg: "bg-red-500", width: "20%"},
                {text: "Weak", color: "text-orange-500", bg: "bg-orange-500", width: "40%"},
                {text: "Fair", color: "text-yellow-500", bg: "bg-yellow-500", width: "60%"},
                {text: "Good", color: "text-blue-500", bg: "bg-blue-500", width: "80%"},
                {text: "Strong", color: "text-green-500", bg: "bg-green-500", width: "100%"}
            ];
            
            return {score, ...strengthLevels[score], checks};
        }

        // --- PASSWORD AUDIT FEATURES ---
        function runPasswordAudit() {
            const { weakPasswords, reusedPasswords, oldPasswords } = auditPasswords();
            
            let resultsHTML = '';
            
            // Weak passwords section
            if (weakPasswords.length > 0) {
                resultsHTML += `
                    <div class="bg-red-50 border border-red-200 rounded-xl p-4">
                        <div class="flex items-center gap-2 mb-2">
                            <i class="fas fa-exclamation-triangle text-red-500"></i>
                            <h4 class="font-bold text-red-700">Weak Passwords (${weakPasswords.length})</h4>
                        </div>
                        <p class="text-sm text-red-600 mb-3">These passwords are less than 8 characters long:</p>
                        <div class="flex flex-wrap gap-2">
                            ${weakPasswords.map(site => `
                                <span class="bg-red-100 text-red-700 px-3 py-1 rounded-full text-xs font-medium">
                                    ${site}
                                </span>
                            `).join('')}
                        </div>
                    </div>
                `;
            } else {
                resultsHTML += `
                    <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                        <div class="flex items-center gap-2 mb-2">
                            <i class="fas fa-check-circle text-green-500"></i>
                            <h4 class="font-bold text-green-700">All Passwords Are Strong!</h4>
                        </div>
                        <p class="text-sm text-green-600">Great job! All your passwords meet minimum security requirements.</p>
                    </div>
                `;
            }
            
            // Reused passwords section
            if (reusedPasswords.length > 0) {
                resultsHTML += `
                    <div class="bg-yellow-50 border border-yellow-200 rounded-xl p-4">
                        <div class="flex items-center gap-2 mb-2">
                            <i class="fas fa-exclamation-circle text-yellow-500"></i>
                            <h4 class="font-bold text-yellow-700">Reused Passwords (${reusedPasswords.length})</h4>
                        </div>
                        <p class="text-sm text-yellow-600 mb-3">These passwords are used for multiple sites:</p>
                        ${reusedPasswords.map(group => `
                            <div class="mb-3 last:mb-0">
                                <p class="text-xs font-medium text-gray-500 mb-1">Used for ${group.sites.length} sites:</p>
                                <div class="flex flex-wrap gap-2">
                                    ${group.sites.map(site => `
                                        <span class="bg-yellow-100 text-yellow-700 px-3 py-1 rounded-full text-xs font-medium">
                                            ${site}
                                        </span>
                                    `).join('')}
                                </div>
                            </div>
                        `).join('')}
                    </div>
                `;
            } else {
                resultsHTML += `
                    <div class="bg-green-50 border border-green-200 rounded-xl p-4">
                        <div class="flex items-center gap-2">
                            <i class="fas fa-check-circle text-green-500"></i>
                            <h4 class="font-bold text-green-700">No Password Reuse Detected</h4>
                        </div>
                        <p class="text-sm text-green-600">Excellent! You're using unique passwords for each site.</p>
                    </div>
                `;
            }
            
            // Statistics
            const totalEntries = vaultData.length;
            const strongCount = vaultData.filter(entry => entry.pass.length >= 12).length;
            const weakCount = weakPasswords.length;
            const reusedCount = reusedPasswords.length;
            
            resultsHTML += `
                <div class="bg-blue-50 border border-blue-200 rounded-xl p-4">
                    <h4 class="font-bold text-blue-700 mb-3">Security Summary</h4>
                    <div class="grid grid-cols-2 gap-4">
                        <div class="text-center">
                            <div class="text-2xl font-bold text-blue-600">${totalEntries}</div>
                            <div class="text-xs text-blue-500">Total Entries</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold text-green-600">${strongCount}</div>
                            <div class="text-xs text-green-500">Strong Passwords</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold ${weakCount > 0 ? 'text-red-600' : 'text-green-600'}">${weakCount}</div>
                            <div class="text-xs ${weakCount > 0 ? 'text-red-500' : 'text-green-500'}">Weak Passwords</div>
                        </div>
                        <div class="text-center">
                            <div class="text-2xl font-bold ${reusedCount > 0 ? 'text-yellow-600' : 'text-green-600'}">${reusedCount}</div>
                            <div class="text-xs ${reusedCount > 0 ? 'text-yellow-500' : 'text-green-500'}>Reused</div>
                        </div>
                    </div>
                </div>
            `;
            
            document.getElementById('audit-results').innerHTML = resultsHTML;
            document.getElementById('audit-modal').classList.remove('hidden');
        }

        function closeAuditModal() {
            document.getElementById('audit-modal').classList.add('hidden');
        }

        function auditPasswords() {
            const weakPasswords = [];
            const passwordUsage = {};
            
            vaultData.forEach(entry => {
                // Check for weak passwords
                if (entry.pass.length < 8) {
                    weakPasswords.push(entry.site);
                }
                
                // Track password usage
                if (!passwordUsage[entry.pass]) {
                    passwordUsage[entry.pass] = [];
                }
                passwordUsage[entry.pass].push(entry.site);
            });
            
            // Find reused passwords
            const reusedPasswords = Object.entries(passwordUsage)
                .filter(([pass, sites]) => sites.length > 1)
                .map(([pass, sites]) => ({pass, sites}));
            
            return { weakPasswords, reusedPasswords };
        }

        // --- FIRST TIME USER GUIDE ---
        function showFirstTimeGuide() {
            // Check if this is first time (no entries in vault)
            if (vaultData.length === 0) {
                isFirstTime = true;
                setTimeout(() => {
                    document.getElementById('first-time-modal').classList.remove('hidden');
                }, 1000);
            }
        }

        function closeFirstTimeModal() {
            document.getElementById('first-time-modal').classList.add('hidden');
            showNotification("Add your first password using the + button above!", "info");
        }

        // --- CRYPTO ENGINE ---
        async function deriveKey(password, salt) {
            const encoder = new TextEncoder();
            const baseKey = await crypto.subtle.importKey(
                "raw", encoder.encode(password), "PBKDF2", false, ["deriveKey"]
            );
            return await crypto.subtle.deriveKey(
                { name: "PBKDF2", salt, iterations: 100000, hash: "SHA-256" },
                baseKey,
                { name: "AES-GCM", length: 256 },
                false,
                ["encrypt", "decrypt"]
            );
        }

        async function encrypt(text, key) {
            const iv = crypto.getRandomValues(new Uint8Array(12));
            const encoded = new TextEncoder().encode(text);
            const ciphertext = await crypto.subtle.encrypt({ name: "AES-GCM", iv }, key, encoded);
            return { 
                data: btoa(String.fromCharCode(...new Uint8Array(ciphertext))), 
                iv: btoa(String.fromCharCode(...iv)) 
            };
        }

        async function decrypt(encryptedObj, key) {
            try {
                const iv = new Uint8Array(atob(encryptedObj.iv).split("").map(c => c.charCodeAt(0)));
                const data = new Uint8Array(atob(encryptedObj.data).split("").map(c => c.charCodeAt(0)));
                const decrypted = await crypto.subtle.decrypt({ name: "AES-GCM", iv }, key, data);
                return new TextDecoder().decode(decrypted);
            } catch (e) { 
                console.error("Decryption failed:", e);
                return null; 
            }
        }

        // --- VAULT ACTIONS ---
        async function unlockVault() {
            const user = document.getElementById('username').value.trim();
            const pass = document.getElementById('master-password').value;
            if (!user || !pass) {
                showNotification("Please enter both vault name and password", "error");
                return;
            }

            const btn = document.getElementById('unlock-btn');
            const originalText = btn.innerHTML;
            btn.innerHTML = `<i class="fas fa-spinner fa-spin"></i><span>Unlocking...</span>`;
            btn.disabled = true;

            try {
                const resp = await fetch(`${WORKER_URL}/get?user=${user}`);
                const cloudData = await resp.json();
                
                if (cloudData && cloudData.salt) {
                    currentSalt = new Uint8Array(atob(cloudData.salt).split("").map(c => c.charCodeAt(0)));
                } else {
                    currentSalt = crypto.getRandomValues(new Uint8Array(16));
                }

                encryptionKey = await deriveKey(pass, currentSalt);

                if (cloudData && cloudData.vault) {
                    const decrypted = await decrypt(cloudData.vault, encryptionKey);
                    if (decrypted === null) {
                        throw new Error("Incorrect master password. Please try again.");
                    }
                    vaultData = JSON.parse(decrypted);
                } else {
                    vaultData = [];
                }

                showVault(user);
                showNotification("Vault unlocked successfully!", "success");
                
                // Show first time guide if vault is empty
                if (vaultData.length === 0) {
                    setTimeout(() => {
                        showFirstTimeGuide();
                    }, 500);
                }
                
            } catch (err) {
                showNotification(err.message, "error");
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        }
        
        function lockVault() {
            if (confirm("Are you sure you want to lock the vault?")) {
                clearTimeout(idleTimeout);
                location.reload();
            }
        }

        function showVault(user) {
            document.getElementById('auth-section').classList.add('hidden-vault');
            document.getElementById('vault-section').classList.remove('hidden-vault');
            document.getElementById('display-user').innerText = user;
            renderEntries();
            updateLastSync();
            
            // Update entry count
            document.getElementById('entry-count').textContent = vaultData.length;
            
            // Reset inactivity timer
            resetInactivityTimer();
        }

        function renderEntries() {
            const list = document.getElementById('entries-list');
            
            if (vaultData.length === 0) {
                list.innerHTML = `
                    <div class="text-center py-12 px-4 rounded-2xl glass-card">
                        <div class="w-20 h-20 rounded-full bg-indigo-50 flex items-center justify-center mx-auto mb-6">
                            <i class="fas fa-key text-3xl text-indigo-300"></i>
                        </div>
                        <h3 class="text-lg font-bold text-gray-700 mb-2">No passwords yet</h3>
                        <p class="text-gray-500 max-w-sm mx-auto text-sm">Add your first password entry above to get started.</p>
                    </div>
                `;
                return;
            }
            
            list.innerHTML = vaultData.map((item, i) => `
                <div class="entry-card glass-card p-5 rounded-2xl border border-white shadow-sm">
                    <div class="flex justify-between items-start">
                        <div class="flex items-start gap-3">
                            <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-indigo-500 flex items-center justify-center">
                                <i class="fas fa-globe text-white"></i>
                            </div>
                            <div class="overflow-hidden">
                                <div class="flex items-center gap-2 mb-1">
                                    <div class="text-sm font-bold text-gray-800 truncate">${item.site || 'Unnamed'}</div>
                                    <button onclick="copyToClipboard('${item.pass}', ${i})" class="text-xs text-indigo-600 hover:text-indigo-800" title="Copy password">
                                        <i class="fas fa-copy"></i>
                                    </button>
                                    <button onclick="togglePasswordVisibility(${i})" class="text-xs text-gray-500 hover:text-gray-700" id="eye-btn-${i}" title="Show password">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <div class="text-sm text-gray-600 truncate mb-2">${item.user || 'No username'}</div>
                                <div class="font-mono text-sm text-gray-800 bg-gray-100 px-3 py-2 rounded-lg select-all" id="password-display-${i}">â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢</div>
                                <input type="hidden" id="actual-password-${i}" value="${item.pass}">
                            </div>
                        </div>
                        <button onclick="removeEntry(${i})" class="ml-4 w-9 h-9 flex items-center justify-center rounded-full bg-red-50 text-red-400 hover:text-red-600 hover:bg-red-100 transition">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </div>
                </div>
            `).join('');
        }

        function addEntry() {
            const site = document.getElementById('new-site');
            const user = document.getElementById('new-user');
            const pass = document.getElementById('new-pass');
            
            if (!site.value || !pass.value) {
                showNotification("Please enter at least a site name and password", "error");
                return;
            }
            
            vaultData.push({ 
                site: site.value, 
                user: user.value || "", 
                pass: pass.value 
            });
            
            site.value = ''; 
            user.value = ''; 
            pass.value = '';
            
            renderEntries();
            document.getElementById('entry-count').textContent = vaultData.length;
            showNotification("Password entry added successfully", "success");
            
            // Auto focus back to site input
            document.getElementById('new-site').focus();
            
            // Hide first time modal if it's showing
            if (isFirstTime) {
                document.getElementById('first-time-modal').classList.add('hidden');
                isFirstTime = false;
                showNotification("Great! Now don't forget to save to cloud!", "info");
            }
        }

        function removeEntry(i) {
            if(confirm("Are you sure you want to delete this password entry?")) {
                const removedSite = vaultData[i].site;
                vaultData.splice(i, 1);
                renderEntries();
                document.getElementById('entry-count').textContent = vaultData.length;
                showNotification(`"${removedSite}" entry deleted`, "info");
            }
        }

        async function saveToCloud() {
            const btn = document.getElementById('sync-btn');
            const user = document.getElementById('username').value.trim();
            const originalText = btn.innerHTML;
            
            btn.innerHTML = `<i class="fas fa-spinner fa-spin"></i><span>Encrypting...</span>`;
            btn.disabled = true;
            
            try {
                const encrypted = await encrypt(JSON.stringify(vaultData), encryptionKey);
                const saltString = btoa(String.fromCharCode(...currentSalt));

                const payload = { user, salt: saltString, vault: encrypted };

                const resp = await fetch(`${WORKER_URL}/save`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                if (resp.ok) {
                    btn.innerHTML = `<i class="fas fa-check"></i><span>Synced Successfully</span>`;
                    btn.classList.remove('from-emerald-500', 'to-teal-500');
                    btn.classList.add('from-indigo-600', 'to-purple-600');
                    
                    updateLastSync();
                    showNotification("Vault saved to cloud securely", "success");
                    
                    setTimeout(() => {
                        btn.innerHTML = originalText;
                        btn.classList.remove('from-indigo-600', 'to-purple-600');
                        btn.classList.add('from-emerald-500', 'to-teal-500');
                        btn.disabled = false;
                    }, 2000);
                }
            } catch (err) {
                btn.innerHTML = `<i class="fas fa-exclamation-triangle"></i><span>Sync Failed</span>`;
                showNotification("Sync failed: " + err.message, "error");
                
                setTimeout(() => {
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }, 2000);
            }
        }
        
        function updateLastSync() {
            const now = new Date();
            const timeString = now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
            const dateString = now.toLocaleDateString();
            document.getElementById('last-sync').textContent = `${dateString} at ${timeString}`;
        }
        
        function generatePassword() {
            const length = 16;
            const charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*()_+";
            let password = "";
            
            // Ensure at least one of each type
            password += "ABCDEFGHIJKLMNOPQRSTUVWXYZ".charAt(Math.floor(Math.random() * 26));
            password += "abcdefghijklmnopqrstuvwxyz".charAt(Math.floor(Math.random() * 26));
            password += "0123456789".charAt(Math.floor(Math.random() * 10));
            password += "!@#$%^&*()_+".charAt(Math.floor(Math.random() * 12));
            
            // Fill the rest
            for (let i = 4; i < length; i++) {
                password += charset.charAt(Math.floor(Math.random() * charset.length));
            }
            
            // Shuffle the password
            password = password.split('').sort(() => 0.5 - Math.random()).join('');
            
            document.getElementById('new-pass').value = password;
            showNotification("Strong password generated", "info");
            
            // Show strength meter
            const strength = checkPasswordStrength(password);
            const strengthMeter = document.getElementById('strength-meter');
            const strengthText = document.getElementById('strength-text');
            const passwordStrengthDiv = document.getElementById('password-strength');
            
            if (password) {
                passwordStrengthDiv.classList.remove('hidden');
                strengthMeter.className = `h-full rounded-full ${strength.bg} transition-all duration-300`;
                strengthMeter.style.width = strength.width;
                strengthText.className = `text-xs font-medium ${strength.color}`;
                strengthText.textContent = strength.text;
            }
        }
        
        function togglePasswordVisibility(index) {
            const displayElement = document.getElementById(`password-display-${index}`);
            const actualPassword = document.getElementById(`actual-password-${index}`).value;
            const eyeButton = document.getElementById(`eye-btn-${index}`);
            
            if (displayElement.textContent === 'â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢') {
                displayElement.textContent = actualPassword;
                eyeButton.innerHTML = `<i class="fas fa-eye-slash"></i>`;
                eyeButton.title = "Hide password";
            } else {
                displayElement.textContent = 'â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢';
                eyeButton.innerHTML = `<i class="fas fa-eye"></i>`;
                eyeButton.title = "Show password";
            }
        }
        
        function copyToClipboard(text, index) {
            navigator.clipboard.writeText(text).then(() => {
                showNotification("Password copied to clipboard", "success");
                
                // Visual feedback
                const button = document.querySelector(`[onclick="copyToClipboard('${text}', ${index})"]`);
                const originalHTML = button.innerHTML;
                button.innerHTML = `<i class="fas fa-check"></i>`;
                
                setTimeout(() => {
                    button.innerHTML = originalHTML;
                }, 2000);
            });
        }
        
        function showNotification(message, type) {
            // Remove existing notification
            const existingNotification = document.querySelector('.notification-toast');
            if (existingNotification) {
                existingNotification.remove();
            }
            
            // Create new notification
            const notification = document.createElement('div');
            notification.className = `notification-toast fixed top-6 left-1/2 transform -translate-x-1/2 z-50 px-6 py-3 rounded-xl shadow-lg font-medium text-white text-sm flex items-center gap-3 slide-down`;
            
            // Set color based on type
            if (type === 'success') {
                notification.style.background = 'linear-gradient(135deg, #10b981 0%, #059669 100%)';
            } else if (type === 'error') {
                notification.style.background = 'linear-gradient(135deg, #ef4444 0%, #dc2626 100%)';
            } else if (type === 'info') {
                notification.style.background = 'linear-gradient(135deg, #3b82f6 0%, #2563eb 100%)';
            } else {
                notification.style.background = 'linear-gradient(135deg, #6b7280 0%, #4b5563 100%)';
            }
            
            // Add icon based on type
            let icon = 'info-circle';
            if (type === 'success') icon = 'check-circle';
            if (type === 'error') icon = 'exclamation-circle';
            
            notification.innerHTML = `
                <i class="fas fa-${icon}"></i>
                <span>${message}</span>
            `;
            
            document.body.appendChild(notification);
            
            // Auto remove after 3 seconds
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transform = 'translate(-50%, -20px)';
                setTimeout(() => notification.remove(), 300);
            }, 3000);
        }
        
        // --- EVENT LISTENERS ---
        document.addEventListener('DOMContentLoaded', function() {
            // Password visibility toggle for master password
            document.getElementById('toggle-password').addEventListener('click', function() {
                const passwordField = document.getElementById('master-password');
                const icon = this.querySelector('i');
                
                if (passwordField.type === 'password') {
                    passwordField.type = 'text';
                    icon.className = 'fas fa-eye-slash';
                } else {
                    passwordField.type = 'password';
                    icon.className = 'fas fa-eye';
                }
            });
            
            // Real-time password strength checking for master password
            document.getElementById('master-password').addEventListener('input', function() {
                const password = this.value;
                const strength = checkPasswordStrength(password);
                const strengthMeter = document.getElementById('strength-meter');
                const strengthText = document.getElementById('strength-text');
                const passwordStrengthDiv = document.getElementById('password-strength');
                
                if (password) {
                    passwordStrengthDiv.classList.remove('hidden');
                    strengthMeter.className = `h-full rounded-full ${strength.bg} transition-all duration-300`;
                    strengthMeter.style.width = strength.width;
                    strengthText.className = `text-xs font-medium ${strength.color}`;
                    strengthText.textContent = strength.text;
                } else {
                    passwordStrengthDiv.classList.add('hidden');
                }
            });
            
            // Enter key to unlock vault
            document.getElementById('master-password').addEventListener('keyup', function(event) {
                if (event.key === 'Enter') {
                    unlockVault();
                }
            });
            
            // Enter key to add new entry
            document.getElementById('new-pass').addEventListener('keyup', function(event) {
                if (event.key === 'Enter') {
                    addEntry();
                }
            });
            
            // Keyboard shortcuts
            document.addEventListener('keydown', (e) => {
                // Ctrl/Cmd + N: New entry
                if ((e.ctrlKey || e.metaKey) && e.key === 'n') {
                    e.preventDefault();
                    document.getElementById('new-site').focus();
                }
                
                // Ctrl/Cmd + L: Lock vault
                if ((e.ctrlKey || e.metaKey) && e.key === 'l') {
                    e.preventDefault();
                    lockVault();
                }
                
                // Escape: Close modals
                if (e.key === 'Escape') {
                    document.getElementById('audit-modal').classList.add('hidden');
                    document.getElementById('first-time-modal').classList.add('hidden');
                    document.getElementById('inactivity-modal').classList.add('hidden');
                }
            });
        });

        // --- SERVICE WORKER REGISTRATION (for PWA) ---
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                const swCode = `
                    const cacheName = 'vault-v2';
                    self.addEventListener('install', e => e.waitUntil(caches.open(cacheName).then(c => c.addAll(['/']))));
                    self.addEventListener('fetch', e => e.respondWith(fetch(e.request).catch(() => caches.match(e.request))));
                `;
                const blob = new Blob([swCode], {type: 'text/javascript'});
                navigator.serviceWorker.register(URL.createObjectURL(blob));
            });
        }
    </script>
